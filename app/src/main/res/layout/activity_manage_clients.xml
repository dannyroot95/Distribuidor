<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryadmin"
    tools:context=".UI.Manager.ManageClients">

    <Button
        android:id="@+id/btn_register_clients"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Agregar nuevo cliente"
        android:drawableTop="@drawable/ic_add_24"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_clients"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent"/>

</LinearLayout>