<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/primaryadmin"
    android:layout_height="match_parent"
    tools:context=".UI.Menu.MenuSuperAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:layout_height="match_parent">

            <com.aukde.distribuidor.Utils.UbuntuTextViewBold
                android:layout_width="match_parent"
                android:id="@+id/tv_fullname"
                android:text="Nombre de Super Usuario"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <com.aukde.distribuidor.Utils.UbuntuTextViewRegular
                android:layout_width="match_parent"
                android:text="SUPER USUARIO"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            app:civ_border_color="@color/white"
            android:src="@drawable/ic_super_user"
            app:civ_border_width="2dp"
            android:layout_height="60dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:id="@+id/btn_manage_users"
                    android:src="@drawable/users"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"
                    android:layout_height="100dp"
                    android:foreground="@drawable/click_circle"
                    tools:ignore="UnusedAttribute" />

                <com.aukde.distribuidor.Utils.UbuntuTextViewMedium
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="Usuarios"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btn_manage_products"
                    android:layout_width="100dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"
                    android:backgroundTint="@color/teal_200"
                    android:src="@drawable/product"
                    android:foreground="@drawable/click_circle"
                    tools:ignore="UnusedAttribute"
                    android:layout_height="100dp"/>

                <com.aukde.distribuidor.Utils.UbuntuTextViewMedium
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="Productos"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:id="@+id/btn_map_workers"
                    android:src="@drawable/mapworker"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"
                    android:layout_height="100dp"
                    android:foreground="@drawable/click_circle"
                    tools:ignore="UnusedAttribute" />

                <com.aukde.distribuidor.Utils.UbuntuTextViewMedium
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="Vendedores"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btn_map_clients"
                    android:layout_width="100dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"
                    android:backgroundTint="@color/teal_200"
                    android:src="@drawable/client"
                    android:foreground="@drawable/click_circle"
                    tools:ignore="UnusedAttribute"
                    android:layout_height="100dp"/>

                <com.aukde.distribuidor.Utils.UbuntuTextViewMedium
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="Clientes"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btn_map_delivery"
                    android:layout_width="100dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"
                    android:backgroundTint="@color/teal_200"
                    android:src="@drawable/mapvehicle"
                    android:foreground="@drawable/click_circle"
                    tools:ignore="UnusedAttribute"
                    android:layout_height="100dp"/>

                <com.aukde.distribuidor.Utils.UbuntuTextViewMedium
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="Repartidores"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:text="Salir"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

</LinearLayout>